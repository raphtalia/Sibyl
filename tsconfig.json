{
	"compilerOptions": {
		"strict": true,
		"module": "es2022",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2021",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"lib": ["es2021"],
	"include": ["src/**/*"],
	"exclude": [],
	"hooks": ["copy-files"]
}
